@page
@model KoiListModel
@{
    ViewData["Title"] = "My Koi Fish";
}

<h2>My Koi Fish</h2>

@if (Model.KoiFishList != null && Model.KoiFishList.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Variety</th>
                <th>Age</th>
                <th>Description</th>
                <th>Registration Date</th>
                <td>Update Koi</td>
                <td>Delete Koi</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var koi in Model.KoiFishList)
            {
                <tr>
                    <td>@koi.Name</td>
                    <td>@koi.Variety</td>
                    <td>@koi.Age</td>
                    <td>@koi.Description</td>
                    <td>@koi.RegistrationDate?.ToString("yyyy-MM-dd")</td>
                    <td></td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="deleteKoi" value="@koi.Id" />
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this Koi?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/User/UserPage">Return Home Page</a>
}
else
{
    <p>You have not registered any Koi fish yet.</p>
}
