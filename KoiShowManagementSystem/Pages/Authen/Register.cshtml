@page
@model KoiShowManagementSystem.Pages.Authen.RegisterModel
<h2 class="register-page">Register</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.FullName"></label>
        <input asp-for="Input.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Address"></label>
        <input asp-for="Input.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <a href="/Authen/Login" style="text-decoration:none">Return Login Page</a>
</form>
<style>
    .form-group{
        margin:15px 0;
    }

    .register-page {
        width: 900px;
        margin: auto;
        text-align: center;
    }
</style>
